<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgColorBrigth"
    tools:context="com.texttospeech.texttospeech.SettingsDesign">

    <TextView
        android:id="@+id/tvEinstellungenA"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="@string/Settings"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/MainHeaderNormalLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/einstellungenLinie"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEinstellungenA" />

    <TextView
        android:id="@+id/tvDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/SettingsDesign"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/SecondHeaderNormalLayout"
        app:layout_constraintEnd_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/einstellungenLinie" />

    <TextView
        android:id="@+id/tvEinstellungenAFrage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="@string/SettingsDesignContent"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/StandardTextSize"
        app:layout_constraintEnd_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDesign" />

    <Button
        android:id="@+id/btBrightTheme"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeight"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:background="@color/BgColorButtonBright"
        android:onClick="setBrightTheme"
        android:text="@string/SettingsDesignButtonBrightTheme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/StandardTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDarkTheme"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeight"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/BgColorButtonBright"
        android:onClick="setDarkTheme"
        android:text="@string/SettingsDesignButtonDarkTheme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/StandardTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintTop_toBottomOf="@+id/btBrightTheme" />

    <Button
        android:id="@+id/btConstrastTheme"
        android:layout_width="0dp"
        android:layout_height="@dimen/ButtonHeight"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@color/BgColorButtonBright"
        android:onClick="setConstrastTheme"
        android:text="@string/SettingsDesignButtonContrastTheme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/StandardTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvEinstellungenA"
        app:layout_constraintTop_toBottomOf="@+id/btDarkTheme" />

</android.support.constraint.ConstraintLayout>
